<%= form_for(@critter) do |f| %>
  <% if @critter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@critter.errors.count, "error") %> prohibited this critter from being saved:</h2>

      <ul>
      <% @critter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name,  class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :type_id %><br>
    <%= f.collection_select :type_id, Type.all, :id, :name,  class: "form-control" %>
    <p><%= link_to 'Create New Type', new_type_path %></p>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br>
    <%= f.collection_select :owner_id, Owner.all, :id, :name,  class: "form-control" %>
    <p><%= link_to 'Create New Owner', new_owner_path %></p>
  <div class="field">
    <%= f.label :hobby %><br>
    <%= f.text_area :hobby,  class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label "Photo" %><br>
    <%= image_tag @critter.photo_url %>
    <p>Update Photo URL:</p>
    <%= f.text_field :photo_url,  class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
