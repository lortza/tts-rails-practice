<p id="notice"><%= notice %></p>

<h1>Listing Critters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Owner</th>
      <th>Hobby</th>
      <th>Photo url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @critters.each do |critter| %>
      <tr>
        <td><%= critter.name %></td>
        <td><%= critter.type %></td>
        <td><%= critter.owner %></td>
        <td><%= critter.hobby %></td>
        <td><%= critter.photo_url %></td>
        <td><%= link_to 'Show', critter %></td>
        <td><%= link_to 'Edit', edit_critter_path(critter) %></td>
        <td><%= link_to 'Destroy', critter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

