<!-- change to simple_ and then add remote true-->
<%= simple_form_for(@user_task, remote: true) do |f| %>
 <%= f.error_notification %>

 <div class="form-inputs">
   <%= f.input :description, as: :text, placeholder: "Make groceries" %>
   <%= f.input :due, as: :string, placeholder: "Today!" %>
 </div>

 <div class="form-actions">
   <%= f.submit %>
 </div>
<% end %><!-- smple_form_for -->