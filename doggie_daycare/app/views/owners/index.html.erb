<p id="notice"><%= notice %></p>

<h1>Dog Guardians (Owners)</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.order("name").each do |owner| %>
      <tr>
        <td><%= owner.name %></td>
        <td><%= owner.phone %></td>
        <td><%= link_to 'Show', owner, class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner), class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path, class: "btn btn-primary" %>
