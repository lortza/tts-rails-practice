<p id="notice"><%= notice %></p>

<h1>Dogs</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Dog's Name</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.order("name").each do |dog| %>
      <tr>
        <td><%= dog.id %></td>
        <td><%= dog.name %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.age %></td>
        <td><%= dog.owner.name %></td>
        <td><%= link_to 'Show', dog, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog', new_dog_path, class: "btn btn-default" %>
