<p id="notice"><%= notice %></p>

<h1>Listing Critters</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
      <th>Lives</th>
      <th>Hobbies</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @critters.each do |critter| %>
      <tr>
        <td><%= link_to critter.name, critter %></td>
        <td><%= critter.breed %></td>
        <td>With <%= link_to critter.guardian.name, critter.guardian %> in <%= critter.guardian.city %>, <%= critter.guardian.country.name %></td>
        <td><%= critter.hobbies %></td>
        <td>PHOTO</td>
        <td><%= link_to 'Show', critter %></td>
        <td><%= link_to 'Edit', edit_critter_path(critter) %></td>
        <td><%= link_to 'Destroy', critter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

