<p id="notice"><%= notice %></p>

<h1>Recent Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.author %></td>
        <td><%= post.created_at.strftime("%b %d, %Y") %></td>
        <td><%= link_to 'Show Post', post, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit Post', edit_post_path(post), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-default" %>
